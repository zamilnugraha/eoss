  <background>
    <alpha>100</alpha>
  </background>
  <balloon>
    <show>{title}: {percents}%</show>
  </balloon>
  <legend>
    <enabled>0</enabled>
  </legend>
  <pie>
    <inner_radius>40</inner_radius>
    <height>10</height>
    <angle>10</angle>
    <gradient>radial</gradient>
    <gradient_ratio>-50,0,0,-50</gradient_ratio>
